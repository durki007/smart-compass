CONFIG_LV_DISP_ROT_MAX_BUF=10240
# end of Drawing

#
# Widget usage
#
CONFIG_LV_USE_CANVAS=y
CONFIG_LV_USE_IMG=y
CONFIG_LV_USE_LABEL=y
